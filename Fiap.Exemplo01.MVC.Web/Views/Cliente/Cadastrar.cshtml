@model Fiap.Exemplo01.MVC.Web.Models.Cliente

<div class="alert alert-success">
    @if (TempData["msg"] != null)
    {
        @TempData["msg"]
    }

</div>
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Cliente</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(cli => cli.Nome, new { placeholder = "Nome", @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Idade)
        @Html.TextBoxFor(cli => cli.Idade, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Credito)
        @Html.TextBoxFor(cli => cli.Credito, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>

}

