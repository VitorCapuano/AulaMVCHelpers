@model Fiap.Exemplo01.MVC.Web.Models.Cliente
@Helper.Message(TempData["msg"] as string)
@{
    ViewBag.Title = "Cadastrar";
}
<h2>Cadastro de Cliente</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(cli => cli.Nome, new { placeholder = "Nome", @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Idade)
        @Html.TextBoxFor(cli => cli.Idade, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Credito)
        @Html.TextBoxFor(cli => cli.Credito, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.DataNascimento)
        @Html.TextBoxFor(cli => cli.DataNascimento, new { @class = "form-control" })
    </div>

    <div class="form-group">

        @Html.LabelFor(c => c.EstadoCivil)
        @Html.DropDownListFor(cli => cli.EstadoCivil, ViewBag.estados as SelectList, "Selecione", new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Helper.Submit("Salvar", "btn btn-primary")
    </div>

}

@section scripts
    
    {
        <!--Scripts-->
    }
